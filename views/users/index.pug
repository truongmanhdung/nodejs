extends ../layouts/header.pug
block header
    div(class="container")
        h1 users 
        a(href="/users/create") new user 
        form(action="/users/search", class="form-group",method="GET")
            input(type="text" name="q" class="form-control mb-2")
            button(class="btn mt-10  btn-primary") search

        ul
            each user in users
                li  
                    span= user.name
                    span &nbsp;
                    a(href = "/users/" + user.id) view
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js",integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf",crossorigin="anonymous")