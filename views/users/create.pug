extends ../layouts/header.pug
block header
    .container
        h1 Create user
        if errors
            each error in errors
                .alert.alert-danger= error
             
        form(action="/users/create", method="post", enctype="multipart/form-data")
            .form-group
                label(for="name") Name 
                input(type="text", class="form-control mb-2", name="name", value=values ? values.name : '')
            .form-group
                label(for="email") Email 
                input(type="text", class="form-control mb-2", name="email", value=values ? values.email : '')
            .form-group
                label(for="password") Password 
                input(type="password", class="form-control mb-2", name="password", value=values ? values.password : '')
            .form-group
                label(for="phone") Phone 
                input(type="text", class="form-control mb-2", name="phone", value=values ? values.phone : '')
            .form-group
                label(for="avatar") Avatar 
                input(type="file", class="form-control mb-2", name="avatar")
            button(class="btn btn-primary") Create