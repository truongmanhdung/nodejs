extends ../layouts/header.pug
block header
    .container
        h1 Login 
        if errors
            each error in errors
                .alert.alert-danger= error
             
        form(action="/auth/login", method="post")
            .form-group
                label(for="email") Email 
                input#email(type="text", class="form-control mb-2", name="email", value=values ? values.email : '')
            .form-group
                label(for="password") Password 
                input#password(type="password", class="form-control mb-2", name="password", value=values ? values.password : '')
            button(class="btn btn-primary") Login